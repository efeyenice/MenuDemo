@model List<MenuDemo.Models.Dish>

<h1>Menu</h1>

@if (ViewBag.IsAdvancedSearch == true)
{
    <div class="alert alert-info">
        <strong>Advanced Search Results</strong>
        <p class="mb-0">Found @Model.Count dish(es) matching your criteria.</p>
        @if (!string.IsNullOrEmpty(ViewBag.DishName as string) || 
              !string.IsNullOrEmpty(ViewBag.Ingredient as string) || 
              ViewBag.MinPrice != null || 
              ViewBag.MaxPrice != null)
        {
            <small class="text-muted">
                Filters: 
                @if (!string.IsNullOrEmpty(ViewBag.DishName as string))
                { <span class="badge bg-secondary">Dish: @ViewBag.DishName</span> }
                @if (!string.IsNullOrEmpty(ViewBag.Ingredient as string))
                { <span class="badge bg-secondary">Ingredient: @ViewBag.Ingredient</span> }
                @if (ViewBag.MinPrice != null || ViewBag.MaxPrice != null)
                { 
                    <span class="badge bg-secondary">
                        Price: $@(ViewBag.MinPrice ?? 0) - $@(ViewBag.MaxPrice ?? 999)
                    </span> 
                }
            </small>
        }
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
{
    <div class="alert alert-info">
        <strong>Search Results for: "@ViewBag.SearchTerm"</strong>
        <p class="mb-0">Found @Model.Count dish(es) matching your search.</p>
    </div>
}

@if (Model.Count == 0 && (ViewBag.IsAdvancedSearch == true || !string.IsNullOrEmpty(ViewBag.SearchTerm as string)))
{
    <div class="alert alert-warning">
        <p>No dishes found matching your search criteria. Try searching for:</p>
        <ul>
            <li>Dish names (e.g., "kebap", "doner", "lahmacun")</li>
            <li>Ingredients (e.g., "et", "peynir", "domates")</li>
            <li>Adjust your price range or try different filters</li>
        </ul>
    </div>
}
else if (Model.Count == 0)
{
    <p class="text-muted">Browse our delicious Turkish menu. Use the search bar above to find specific dishes or ingredients.</p>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>Price: $@item.Price.ToString("F2")</strong></p>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if ((ViewBag.IsAdvancedSearch == true || !string.IsNullOrEmpty(ViewBag.SearchTerm as string)) && Model.Count > 0)
{
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">‚Üê Back to Full Menu</a>
    </div>
}

